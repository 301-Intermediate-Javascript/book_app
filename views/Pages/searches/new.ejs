        <ul>
            <li>
                <div>
                <form action="/searches" method="POST">
                    <fieldset>Search for Book by Author or Title </fieldset><br>
                    <input type="text" name="name" placeholder="Author/Title"><br>
                    <input type="radio" name="Author" value="Author">
                    <label for="Author">Author</label><br>
                    <input type="radio" name="Title" value="Title">
                    <label for="Title">Title</label><br>
                    <button type="submit" class="button">Search</button>
                
                </form>
            </div>
