<% if(displayButton) { %>
    <button id="showForm">Update book in collection?</button>

    <% } %>
<form action="/books/<%= book.id %>/update?_overrideMethod=PUT" method="POST" id="form">
    <label for="newBookShelf">Make new Bookshelf</label>
    <input type="number" name="newBookShelf">
    <select name="currentBookShelf" id="bookShelf"></select>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= book.title %>" placeholder="Title">
    <label for="author">Author</label>
    <input type="text" name="author" value="<%= book.author %>" placeholder="Author">
    <label for="isbn">ISBN</label>
    <input type="text" name="isbn" value="<%= book.isbn %>" placeholder="ISBN">
    <label for="image">Image URL</label>
    <input type="text" name="image" value="<%= book.image %>" placeholder="Use a hperlink with HTTPS">
    <label for="description">Description</label>
    <input type="text" name="description" value="<%= book.description %>" placeholder="Please describe the book">
    <input type="submit" value="Update">
</form>